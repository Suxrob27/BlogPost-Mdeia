@using DB.Model.Notification
@{
    var notification = (NotificationModel)ViewData["Notification"];
    if (notification != null)
    {
        string notificationType = "";
        switch (notification.Type)
        {
            case DB.Model.Notification.NotificationType.Success:
                notificationType = "alert-success";
                break;
            case DB.Model.Notification.NotificationType.Info:
                notificationType = "alert-info";
                break;
            case DB.Model.Notification.NotificationType.Error:
                notificationType = "alert-danger";
                break;
        }


        <div class="container mb-5">
            <div class="alert @notificationType alert-dismissible fade show mb-5" role="alert">
                @Html.Raw(notification.Message)
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
}
}