@page
@using Bloggie.Web.Pages.ForgotPassword
@model ForgotPasswordModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row col-md-10 offset-md-1">
    <h1 class="text-primary text-center pt-2">Forgot your Password</h1>
    <form method="post" asp-controller="Account" asp-action="ForgotPassword" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <div class="border p-2 rounded">
            <p class="text-center">Enter your email.</p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="model.Email" class="col-12"></label>
                <div class="col-md-12">
                    <input asp-for="model.Email" class="form-control" />
                    <span asp-validation-for="model.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group pt-3">
                <div class="col-md-6 offset-md-3">
                    <button class="btn btn-success form-control" type="submit">
                        Submit
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}